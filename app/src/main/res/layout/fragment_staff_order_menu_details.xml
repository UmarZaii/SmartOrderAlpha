<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:background="@drawable/activity_border_whitewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:background="@drawable/activity_header_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah bilangan makanan"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/white"/>

            <TableRow
                android:background="@drawable/activity_tablerow_yellow"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell_yellow"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblStaffOrderMenuNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffOrderMenuNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_yellow"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell_yellow"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblStaffOrderMenuPriceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga(RM)"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffOrderMenuPriceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_yellow_last"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell_yellow"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblStaffOrderMenuAmountDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bilangan"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <EditText
                    android:id="@+id/edtStaffOrderMenuAmountDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masuk bil.."
                    android:paddingLeft="20dp"
                    android:textSize="12dp"/>

            </TableRow>

        </TableLayout>

        <Button
            android:background="@drawable/activity_btn_green"
            android:id="@+id/btnStaffOrderMenuAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/successColorDark1"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</ScrollView>