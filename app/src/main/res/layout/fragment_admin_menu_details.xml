<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Menu Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:id="@+id/lblMenuNameDetails"/>

    <TextView
        android:hint="Lemonade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMenuNameDetails"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/lblMenuNameDetails"/>

    <TextView
        android:text="Menu Price :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/lblMenuPriceDetails"
        android:layout_below="@+id/txtMenuNameDetails"/>

    <TextView
        android:hint="RM 1.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/txtMenuPriceDetails"
        android:layout_below="@+id/lblMenuPriceDetails"/>

    <Button
        android:id="@+id/btnDelMenuDetails"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoToUpdMenuDetails"/>

</LinearLayout>