<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <TextView
            android:text="Menu Name :"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:id="@+id/lblMenuNameDetails"/>

            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMenuNameDetails"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/lblMenuNameDetails"/>

        <TextView
            android:text="Menu Price :"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/lblMenuPriceDetails"
            android:layout_below="@+id/txtMenuNameDetails"/>

        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/txtMenuPriceDetails"
            android:layout_below="@+id/lblMenuPriceDetails"/>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnDelMenuDetails"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoToUpdMenuDetails"/>

    </LinearLayout>
</ScrollView>