<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:background="@drawable/activity_border_purplewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/activity_header_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu Utama"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeAir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Minuman"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeNasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Nasi"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeMee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Mee/Bihun/Kuey Teow"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeSup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Sup/Tom Yam"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeLauk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Ayam/Daging/Sotong/Udang"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeSayur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Sayur"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeTelur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Telur"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </TableLayout>

        <TableLayout
            android:background="@drawable/activity_border_purplewhite"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/activity_header_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu Special"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypePagi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="set Pagi"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeTengahari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Set Tengahari"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypePetang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Set Petang"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:background="@drawable/activity_button_center"
                android:id="@+id/btnCustOrderMenuTypeMalam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Set Malam"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </TableLayout>



    </LinearLayout>

</ScrollView>