<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:background="@drawable/activity_border_purplewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:background="@drawable/activity_header_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profil Pengguna"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:id="@+id/lblStaffUserEmailDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffUserEmailDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="test@gmail.com"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>

            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:id="@+id/lblStaffUserICDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. IC"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffUserICDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="96010407092536"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>

            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:id="@+id/lblStaffUserNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffUserNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wan Arip"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>

            <TableRow
                android:background="@drawable/activity_tablerow_last"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:id="@+id/lblStaffUserTypeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtStaffUserTypeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Customer"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>

        </TableLayout>


    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Delete"-->
        <!--android:layout_marginTop="25dp"/>-->

    </LinearLayout>


</ScrollView>