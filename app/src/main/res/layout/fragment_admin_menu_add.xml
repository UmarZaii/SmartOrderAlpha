<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_admin_menu_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.davon.smartorderalpha.AdminMenuAdd">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Name..."
        android:textSize="20sp"
        android:id="@+id/edtMenuName"
        android:layout_marginTop="80dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Price..."
        android:textSize="20sp"
        android:id="@+id/edtMenuPrice"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtMenuName" />

    <Button
        android:text="Add Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMenu"
        android:textSize="15sp"
        android:layout_below="@+id/edtMenuPrice"
        android:layout_marginTop="10dp" />

</LinearLayout>
