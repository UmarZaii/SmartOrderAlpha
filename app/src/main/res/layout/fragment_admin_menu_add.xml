<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/fragment_admin_menu_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.davon.smartorderalpha.AdminMenuAdd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your menu"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <FrameLayout
        android:background="@drawable/green_border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:backgroundTint="@android:color/holo_green_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Menu Name..."
            android:textSize="20dp"
            android:id="@+id/edtMenuName"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Menu Price..."
            android:textSize="20dp"
            android:id="@+id/edtMenuPrice"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/edtMenuName"
            android:layout_marginBottom="20dp"/>

    </FrameLayout>

        <Button
            android:background="@drawable/green_btn_border"
            android:text="Add Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddMenu"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/edtMenuPrice"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"/>

    
