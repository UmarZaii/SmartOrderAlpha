<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCustOrderBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Book"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@color/primaryColor"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnCustOrderAdd"
            android:text="Add"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="240dp"
            android:background="@color/successColor"/>

        <Button
            android:id="@+id/btnCustOrderCancel"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="20dp"
            android:background="@color/dangerColor"/>

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCustOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="status"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order List"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAlignment="center"/>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Name"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="60dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price(RM)"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCustOrder"
                android:layout_width="match_parent"
                android:layout_height="400dp">
            </android.support.v7.widget.RecyclerView>

        </TableLayout>

    </FrameLayout>

</LinearLayout>