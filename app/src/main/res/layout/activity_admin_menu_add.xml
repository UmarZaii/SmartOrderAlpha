<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_menu_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davon.smartorderalpha.AdminMenuAdd">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Name..."
        android:ems="12"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:id="@+id/edtMenuName"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Price..."
        android:ems="12"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:id="@+id/edtMenuPrice"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtMenuName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMenu"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:layout_below="@+id/edtMenuPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
