<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:background="@drawable/activity_border_whitewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:background="@drawable/activity_header_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan bilangan makanan"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/white"/>

            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblCustOrderMenuNameDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtCustOrderMenuNameDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblCustOrderMenuPriceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga(RM)"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <TextView
                    android:id="@+id/txtCustOrderMenuPriceDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_last"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:textColor="@color/elegantColorDark"
                    android:id="@+id/lblCustOrderMenuAmountDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilangan"
                    android:textSize="12dp"
                    android:paddingRight="20dp"/>

                <EditText
                    android:id="@+id/edtCustOrderMenuAmountDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="masuk bil..."
                    android:textSize="12dp"
                    android:paddingLeft="20dp"/>

            </TableRow>

        </TableLayout>


        <Button
            android:background="@drawable/green_btn_border"
            android:id="@+id/btnCustOrderMenuAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</ScrollView>