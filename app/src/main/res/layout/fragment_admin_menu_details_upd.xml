<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:background="@drawable/activity_border_yellowhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:background="@drawable/activity_header_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kemaskini"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:background="@drawable/activity_header_yellow_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name menu dan harga"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menu Name..."
                android:textSize="15dp"
                android:id="@+id/edtMenuNameUpdDetails"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menu Price..."
                android:textSize="15dp"
                android:id="@+id/edtMenuPriceUpdDetails"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="30dp"/>

        </TableLayout>

        <Button
            android:background="@drawable/activity_blue_btn"
            android:text="Update Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpdMenuDetails"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="25dp" />
        
    </LinearLayout>
</ScrollView>