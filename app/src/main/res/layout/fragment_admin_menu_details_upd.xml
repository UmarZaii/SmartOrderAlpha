<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Name..."
        android:ems="12"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:id="@+id/edtMenuNameUpdDetails"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Price..."
        android:ems="12"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:id="@+id/edtMenuPriceUpdDetails"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtMenuNameUpdDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Update Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdMenuDetails"
        android:textSize="16sp"
        android:textAlignment="center"
        android:minWidth="0dip"
        android:minHeight="0dip"
        android:layout_below="@+id/edtMenuPriceUpdDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</LinearLayout>