<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:background="@drawable/activity_border_purplewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:background="@drawable/activity_header_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendaftaran pengguna"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <EditText
                    android:id="@+id/edtStaffUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sila masukkan email"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_top"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. IC"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <EditText
                    android:id="@+id/edtStaffUserIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sila masukkan no IC"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="80dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>
            <TableRow
                android:background="@drawable/activity_tablerow_last"
                android:padding="10dp">

                <TextView
                    android:background="@drawable/activity_table_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="12dp"
                    android:textColor="@color/elegantColorDark"
                    android:paddingRight="20dp"/>

                <EditText
                    android:id="@+id/edtStaffUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sila masukkan nama"
                    android:textSize="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="80dp"
                    android:layout_marginLeft="20dp"/>

            </TableRow>

        </TableLayout>


        <Button
            android:background="@drawable/green_btn_border"
            android:id="@+id/btnStaffUserAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</ScrollView>
